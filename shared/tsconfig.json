{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "typeRoots": ["../upskiller/node_modules/@types"],
    "paths": {
      "react": ["../upskiller/node_modules/@types/react"],
      "react/*": ["../upskiller/node_modules/@types/react/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}